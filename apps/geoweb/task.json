[
  {
    "name": "${name}",
    "image": "${image}",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "geoserver"
      }
    },
    "secrets": [
      {
        "name": "GEOSERVER_PASSWORD",
        "valueFrom": "${geoserver_password}"
      }
    ],
    "environment": [
      {
        "name": "GEOSERVER_DATA_DIR",
        "value": "${data_dir}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 8080
      }
    ],
    "memoryReservation": 1024,
    "mountPoints": [
      {
        "containerPath": "${data_dir}",
        "sourceVolume": "geo_efs"
      }
    ]
  }
]
