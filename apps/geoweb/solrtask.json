[
  {
    "name": "${name}",
    "image": "${image}",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "geosolr"
      }
    },
    "environment": [
      {
        "name": "SOLR_HOME",
        "value": "${solr_home}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 8983
      }
    ],
    "memoryReservation": 1024,
    "mountPoints": [
      {
        "containerPath": "${solr_home}",
        "sourceVolume": "solr_efs"
      }
    ]
  }
]
